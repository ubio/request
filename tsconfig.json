{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "noImplicitOverride": true,
        "rootDir": "./src",
        "outDir": "./out",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src",
    ]
}
